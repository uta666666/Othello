    <Controls:MetroWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolVisibilityConverter" />
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.LeftWindowCommands>
        <Controls:WindowCommands>
            <Button
                Margin="10,0,10,0"
                Command="{Binding ResetCommand}"
                Content="リセット" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.LeftWindowCommands>

    <Controls:MetroWindow.DataContext>
        <vm:MainViewModel />
    </Controls:MetroWindow.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="800*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <materialDesign:Card
                Grid.Column="1"
                Margin="0,0,0,60"
                Padding="25,10,25,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="50"
                        Height="50"
                        Source="{Binding PlayerImage.Value}" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Style="{DynamicResource MaterialDesignTitleTextBlock}"
                        Text="のターンです" />
                </StackPanel>
            </materialDesign:Card>

            <Button
                Grid.Column="1"
                Width="200"
                Height="45"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Command="{Binding PassCommand}"
                Content="パスする"
                Cursor="Hand"
                FontSize="20"
                Style="{DynamicResource MaterialDesignFlatButton}" />

            <StackPanel
                Margin="50,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <TextBlock
                    FontSize="12"
                    Style="{DynamicResource MaterialDesignTitleTextBlock}"
                    Text="あなたはどっち？" />
                <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                    <RadioButton
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        FontSize="30"
                        FontWeight="ExtraBold"
                        Foreground="White"
                        GroupName="Stone"
                        Style="{StaticResource MaterialDesignRadioButton}">
                        <Image
                            Width="30"
                            Height="30"
                            Margin="5,0,0,0"
                            Source="../Resources/White.png" />
                    </RadioButton>

                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="30"
                        Text="{Binding WhiteCount.Value}"
                        Visibility="{Binding IsDispResult.Value, Converter={StaticResource BoolVisibilityConverter}}" />
                </StackPanel>

                <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                    <RadioButton
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        FontSize="30"
                        FontWeight="ExtraBold"
                        Foreground="White"
                        GroupName="Stone"
                        Style="{StaticResource MaterialDesignRadioButton}">
                        <Image
                            Width="30"
                            Height="30"
                            Margin="5,0,0,0"
                            Source="../Resources/Black.png" />
                    </RadioButton>

                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="30"
                        Text="{Binding BlackCount.Value}"
                        Visibility="{Binding IsDispResult.Value, Converter={StaticResource BoolVisibilityConverter}}" />
                </StackPanel>
                <StackPanel.RenderTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                </StackPanel.RenderTransform>
            </StackPanel>
        </Grid>

